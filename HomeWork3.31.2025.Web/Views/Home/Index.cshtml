@using HomeWork3._31._2025.Data
@model AdViewModel


<div class="row">
    <div class="col-md-6 offset-md-3">
        @foreach (Ad ad in Model.Ads)
        {
            <div class="bg-light rounded-3 p-5 mt-3">
                <h5>Listed by @ad.Name</h5>
            <h5>Listed on @ad.DatePosted.ToLongDateString()</h5>
            <h5>Phone Number: @ad.PhoneNum</h5>
            <h3>Details:</h3>
            <p>@ad.AdContent</p>
            @if(Model.Ids.Contains(ad.Id))
            {
                <form method="post" action="/home/delete">
                    <input type="hidden" name="id" value="@ad.Id" />
                    <button class="btn btn-danger">Delete</button>
                </form>
            }
        </div>
        }
    </div>
</div>
